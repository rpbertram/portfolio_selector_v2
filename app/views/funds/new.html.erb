<!-- Validation failure messages -->
<% if @fund.errors.any? %>
  <% @fund.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Fund</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_fund" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @fund.name %>">
      </div>

      <!-- Label and input for risktolerance -->
      <div class="form-group">
        <label for="risktolerance" class="control-label">
          Risktolerance
        </label>

        <input type="text" id="risktolerance" name="risktolerance" placeholder="Risktolerance" class="form-control" value="<%= @fund.risktolerance %>">
      </div>

      <!-- Label and input for proxyflag -->
      <div class="form-group">
        <label for="proxyflag" class="control-label">
          Proxyflag
        </label>

        <input type="text" id="proxyflag" name="proxyflag" placeholder="Proxyflag" class="form-control" value="<%= @fund.proxyflag %>">
      </div>

      <button class="btn btn-success">
        Create Fund
      </button>
      or
      <a href="/funds">Cancel</a>
    </form>
  </div>
</div>
