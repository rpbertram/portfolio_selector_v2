<div class="page-header">
  <h3>Allocation #<%= @allocation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Client</dt>
      <dd><%= @allocation.client_id %></dd>

      <dt>Fund</dt>
      <dd><%= @allocation.fund_id %></dd>

      <dt>Percentage</dt>
      <dd><%= @allocation.percentage %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/allocations" class="btn btn-primary">
        Back
      </a>
      <a href="/allocations/<%= @allocation.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_allocation/<%= @allocation.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
